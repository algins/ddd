{
    "name": "algins/ddd",
    "description": "Domain Driven Desing example application",
    "autoload": {
        "psr-4": {"App\\": "src/"}
    },
    "require": {
        "slim/slim": "^4.8",
        "slim/psr7": "^1.4",
        "slim/http": "^1.2",
        "php-di/php-di": "^6.3",
        "slim/php-view": "^3.1",
        "vlucas/valitron": "^1.4",
        "ramsey/uuid": "^4.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
